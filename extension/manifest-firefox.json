{
  "manifest_version": 3,
  "name": "Microsoft Login Counter",
  "version": "1.0.0",
  "description": "Track and count Microsoft authentication events at login.microsoftonline.com",
  "browser_specific_settings": {
    "gecko": {
      "id": "microsoft-login-counter@example.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://login.microsoftonline.com/*"
  ],
  "background": {
    "scripts": ["background/login-detector.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
